<!DOCTYPE html>
<html>
  <head>
    <%= render 'shared/head' %>
  </head>

  <body>

    <!-- navigation -->
    <% if @nav != "no nav" %>
      <%= render 'shared/navbar' %>
    <% end %>

    <!-- Notices -->
    <%= render 'shared/notices' %>

    <!-- Main content -->
    <div class="container">
      <div class="<%= controller_name %> <%= action_name %>">
        <div class="row justify-content-lg-center">
          <div class="col-lg-8">
            <%= yield %>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Footer -->
    <% if @footer != "no footer" %>
      <%= render 'shared/footer' %>
    <% end %>

  </body>
</html>
