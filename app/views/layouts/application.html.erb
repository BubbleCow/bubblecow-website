<!DOCTYPE html>
<html lang="en">
  <head>
    <%= render 'shared/head' %>
    <%= javascript_importmap_tags %>
  </head>

  <body>

    <!-- Google tag manager -->
    <%= render 'shared/google_tag_manager' %>

    <!-- navigation -->
    <%= render 'shared/navbar' %>

      <!-- Notices -->
      <%= render 'shared/notices' %>

    
    <div class="container">  
      <!-- Main content -->
      <div class="row">
        <div class="col-lg-8 mx-auto p-3 py-md-5  <%= controller_name %> <%= action_name %>"> 
          <%= yield %>
        </div>
      </div>

    </div>
    
    <!-- Footer -->
    <%= render 'shared/footer' %>

  </body>

</html>

