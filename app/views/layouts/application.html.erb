<!DOCTYPE html>
<html lang="en">
  <head>
    <%= render 'shared/head' %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body>

  <!-- Google tag manager -->
  <%= render 'shared/google_tag_manager' %>

    <!-- navigation -->
    <% if @nav != "no nav" %>
      <%= render 'shared/navbar' %>
    <% end %>

    <div class="container">

      <!-- Notices -->
      <%= render 'shared/notices' %>
      
      <!-- Main content -->
      <div class="<%= controller_name %> <%= action_name %>">
        <div class="row justify-content-lg-center">
          <div class="col-lg-8">
            <%= yield %>
          </div>
        </div>
      </div>

    </div>
    
    <!-- Footer -->
    <% if @footer != "no footer" %>
      <%= render 'shared/footer' %>
    <% end %>

  </body>

</html>
