<!DOCTYPE html>
<html lang="en">
  <head>
    <%= render 'shared/head' %>
  </head>

  <body>

    <!-- Google tag manager -->
    <%= render 'shared/google_tag_manager' %>

    <!-- navigation -->
    <%= render 'shared/navbar' %>

    <div class="container">

      <!-- Notices -->
      <%= render 'shared/notices' %>
      
      <!-- Main content -->
      <div class="<%= controller_name %> <%= action_name %> unformatted_page">
        <%= yield %>
      </div>

    </div>
    
    <!-- Footer -->
    <%= render 'shared/footer' %>

  </body>

</html>
