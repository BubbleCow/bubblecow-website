<article class="blog-post">

    <div class="post card mb-3">

        <div class="card-body">

            <!-- Post title -->
            <div class="card-title">
                <h2 class="blog-post-title"><%= link_to post.post_title.titleize, blog_post_path(post)%></h2>
            </div>

            <!-- Post metadata -->
            <div class="card-text blog-post__metadata mb-3">    
                <%= image_tag("gary-smailes", :alt => "Gary Smailes", class: "img-fluid rounded-circle pr-1", size: "25x25" ) %>   
                <%= post.post_author.name %> - Updated: <%= post.published_at.strftime("%b %d, %Y.") %>
            </div>

            <!-- Post Image -->
            <figure class="blog-post-image">
                <%= image_tag(post.post_image, :alt => post.post_title, class: "img-fluid card-img-top", size: "640x480" ) %>
            </figure>

                    
            <!-- Post description -->
            <div class="card-text blog-post-description">
                <%= post.post_description %>
            </div>

            <!-- Post read more -->
            <div class="card-link blog-post__further-reading mt-3">
                <p class="post-card-continue-reading"><%= link_to "Continue Reading >>>", blog_post_path(post) %></p>
            </div>

        </div>

    </div>

</article>