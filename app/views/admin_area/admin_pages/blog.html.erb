<main class="" id="admin-area-blog">
    
    <div class="admin-card admin-card-first">
        <h2>Posts</h2>
        <ul>
            <% @posts.each do |post| %>
                <li>
                    <%= link_to post.title, blog_post_path(post) %> | 
                    <%= link_to "edit", edit_blog_post_path(post) %> | 
                    <%= link_to "delete", blog_post_path(post), method: :delete, data: { confirm: "Are you sure you want to kill this bad boy?"} %>
                    <% if post.published? %>
                        <%= link_to unpublish_blog_post_path(post), method: :put do %>
                            <span class="badge badge-danger">Unpublish</span>
                        <% end %>
                    <% else %>
                        <%= link_to publish_blog_post_path(post), method: :put do %>
                            <span class="badge badge-success">Publish</span>
                        <% end %>
                    <% end %>
                </li>
            <% end %>
        </ul>
        <p><%= link_to "New Post", new_blog_post_path, class: "btn btn-sm btn-outline-primary" %></p>
    </div>


    <div class="admin-card admin-card-not-first">
        <h2>Authors</h2>
        <ul>
            <% @authors.each do |author| %>
                <li><%= link_to author.name, blog_post_author_path(author) %> | <%= link_to "edit", edit_blog_post_author_path(author) %> | <%= link_to "delete", blog_post_path(author), method: :delete, data: { confirm: "Are you sure you want to kill this bad boy?"} %></li>
            <% end %>
        </ul>
        <p><%= link_to "New Author", new_blog_post_author_path, class: "btn btn-sm btn-outline-primary" %></p>
    </div>


    <div class="admin-card admin-card-not-first">
        <h2>Categories</h2>
        <ul>
            <% @categories.each do |category| %>
                <li><%= link_to category.name, blog_post_category_path(category) %> | <%= link_to "edit", edit_blog_post_category_path(category) %> | <%= link_to "delete", blog_post_category_path(category), method: :delete, data: { confirm: "Are you sure you want to kill this bad boy?"} %></li>
            <% end %>
        </ul>
        <p><%= link_to "New Category", new_blog_post_category_path, class: "btn btn-sm btn-outline-primary" %></p>
    </div>

</main>
