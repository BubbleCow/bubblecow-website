<h1>Messages</h1>

<ul>
  <% @messages.each do |message| %>
    <li>
      <%= link_to message.sender_name, message_path(message) %> | 
      <%= message.sender_email %> | <%= message.created_at.strftime("%d/%m/%Y")  %> | 
      <% if message.read? %>
        <%= link_to unread_message_path(message), method: :put do %>
            <span class="badge badge-danger">Mark as Unread</span>
        <% end %>
      <% else %>
        <%= link_to read_message_path(message), method: :put do %>
            <span class="badge badge-success">Mark as Read</span>
        <% end %>
      <% end %> |
      <%= link_to "delete", message_path(message), method: :delete, data: { confirm: "Are you sure you want to kill this bad boy?"} %>
    </li>
  <% end %>
