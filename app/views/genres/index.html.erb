<h1>Genres</h1>

<table>
  <thead>
    <tr>
      <th>Genre Type</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.genre_type %></td>
        <td>
          <%= link_to 'Show', genre_path(genre) %> |
          <%= link_to 'Edit', edit_genre_path(genre) %> |
          <%= link_to 'Delete', genre, method: :delete, data: { confirm: 'Are you sure?', turbo_method: :delete } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Genre', new_genre_path %>
