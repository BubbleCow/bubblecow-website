


<div class="row">
  <div class="col-sm-6">
    <h1>Mailing_lists</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_mailing_list_path, class: 'btn btn-primary' do %>
    Add New Mailing list
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            <th>Email</th>
            <th>Tag</th>
            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @mailing_lists.each do |mailing_list| %>
        <%= content_tag :tr, id: dom_id(mailing_list), class: dom_class(mailing_list) do %>
          

                      <td><%= mailing_list.email %></td>
                      <td><%= mailing_list.tag %></td>
          
          
            <td><%= link_to 'Show', mailing_list %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
