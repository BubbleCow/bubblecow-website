<!-- Hero -->
<div class="hero px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold">Courses</h1>
</div>


<div class="container">

    <!-- Courses -->
    <div class="row">

      <% @courses.each do |course| %>

        <div class="col-sm-6 d-flex align-items-stretch">
          
          <div class="card mt-3 shadow p-3 mb-5 bg-body rounded">

            <div class="card-body">

                <div class="text-center pb-3">
                  <h2 class="card-title"><%= course.title.titleize %></h2>

                  <div class="cta-button">
                    <%= link_to "View Course", course_path(course), class: "btn btn-primary" %>
                  </div>

                </div>

                <%= course_description(course) %>
             
            </div>

          </div>

        </div>

      <% end %>

    </div>

</div>