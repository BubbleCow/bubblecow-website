            </svg>

            <h3 class="mt-3 mb-3"><%= link_to "Developmental Editing", services_developmental_editing_path %></h3>
            <div class="btn-group" role="group" aria-label="Basic example">
            <%= link_to "Submit for editing", new_services_developmental_edit_path, class: "btn btn-outline-primary" %>
            <%= link_to "Submit for sample", new_services_sample_developmental_edit_path, class: "btn btn-outline-primary" %>
            </div>
        </div>

    </div>

<h3 class="mb-3">Your Books</h3>

        <!-- Jobs -->
        <% @jobs.each do |edit| %>
            <div class="box  <%= is_being_edited?(edit.aasm_state) %>" >
                <% if edit.class == DevelopmentalEdit %>
                    <p><strong>Developmental Edit</strong></p>
                    <p><em><%= edit.title.titleize %></em></p>
                    <p><%= link_to "Go to book", services_developmental_edit_path(edit), class: "btn btn-outline-primary" %></p>
                <% elsif edit.class == SampleDevelopmentalEdit %>
                    <p><strong>Sample Developmental Edit</strong></p>
                    <p><em><%= edit.title.titleize %></em></p>
                    <p><%= link_to "Go to book", services_sample_developmental_edit_path(edit), class: "btn btn-outline-primary" %></p>
                <% end %>
            </div>
        <% end %>

</main>