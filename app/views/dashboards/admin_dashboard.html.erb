

            <!-- Header  -->
            <div class="header">
                <h1>Admin Dashboard</h1>
            </div>

            <div class="row">
                <h2>Stats</h2>
                <!-- stats -->
                <section>
                    <!-- Bootstrap Tabs -->
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="one-year-tab" data-bs-toggle="tab" data-bs-target="#one-year" type="button" role="tab" aria-controls="one-year" aria-selected="true">12 Months</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="two-year-tab" data-bs-toggle="tab" data-bs-target="#two-year" type="button" role="tab" aria-controls="two-year" aria-selected="false">24 Months</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="last-month-tab" data-bs-toggle="tab" data-bs-target="#last-month" type="button" role="tab" aria-controls="last-month" aria-selected="false">Last Month</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="last-week-tab" data-bs-toggle="tab" data-bs-target="#last-week" type="button" role="tab" aria-controls="last-week" aria-selected="false">Last Week</button>
                        </li>
                    </ul>
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="one-year" role="tabpanel" aria-labelledby="one-year-tab">
                            <!-- Chart for 12 Months -->
                            <div class="card">
                                <div class="card-body">
                                    <p class="card-text">Number of monthly overall site visits (Last 12 months)</p>
                                    <%= column_chart Ahoy::Visit.group_by_month(:started_at, last: 12, format: "%b %Y").count %>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="two-year" role="tabpanel" aria-labelledby="two-year-tab">
                            <!-- Chart for 24 Months -->
                            <div class="card">
                                <div class="card-body">
                                    <p class="card-text">Number of monthly overall site visits (Last 24 months)</p>
                                    <%= column_chart Ahoy::Visit.group_by_month(:started_at, last: 24, format: "%b %Y").count %>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="last-month" role="tabpanel" aria-labelledby="last-month-tab">
                            <!-- Chart for Last Month -->
                            <div class="card">
                                <div class="card-body">
                                    <p class="card-text">Number of daily site visits (Last Month)</p>
                                    <%= column_chart Ahoy::Visit.group_by_day(:started_at, last: 30, format: "%-d %b").count, xtitle: "Date", ytitle: "Visits" %>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="last-week" role="tabpanel" aria-labelledby="last-week-tab">
                            <!-- Chart for Last Week -->
                            <div class="card">
                                <div class="card-body">
                                    <p class="card-text">Number of daily site visits (Last Week)</p>
                                    <%= column_chart Ahoy::Visit.group_by_day(:started_at, last: 7, format: "%A").count, xtitle: "Day of the Week", ytitle: "Visits" %>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>

            <div class="row mt-3">
                <!-- Users -->
                <h2>Users</h2>
                <section>
                    <!-- Bootstrap Tabs -->
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="one-year-user-tab" data-bs-toggle="tab" data-bs-target="#one-year-user" type="button" role="tab" aria-controls="one-year" aria-selected="true">12 Months</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="two-year-user-tab" data-bs-toggle="tab" data-bs-target="#two-year-user" type="button" role="tab" aria-controls="two-year" aria-selected="false">24 Months</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="last-month-user-tab" data-bs-toggle="tab" data-bs-target="#last-month-user" type="button" role="tab" aria-controls="last-month" aria-selected="false">Last Month</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="last-week-user-tab" data-bs-toggle="tab" data-bs-target="#last-week-user" type="button" role="tab" aria-controls="last-week" aria-selected="false">Last Week</button>
                        </li>
                    </ul>

                    <div class="tab-content" id="myTabContent">
                        <!-- Tab Content for 12 Months -->
                        <div class="tab-pane fade show active" id="one-year-user" role="tabpanel" aria-labelledby="one-year-user-tab">
                            <div class="card">
                                <div class="card-body">
                                    <p class="card-text">Number of user signups (Last 12 months)</p>
                                    <%= column_chart User.group_by_month(:created_at, last: 12, format: "%b %Y").count %>
                                </div>
                            </div>
                        </div>

                        <!-- Tab Content for 24 Months -->
                        <div class="tab-pane fade" id="two-year-user" role="tabpanel" aria-labelledby="two-year-user-tab">
                            <div class="card">
                                <div class="card-body">
                                    <p class="card-text">Number of user signups (Last 24 months)</p>
                                    <%= column_chart User.group_by_month(:created_at, last: 24, format: "%b %Y").count %>
                                </div>
                            </div>
                        </div>

                        <!-- Tab Content for Last Month -->
                        <div class="tab-pane fade" id="last-month-user" role="tabpanel" aria-labelledby="last-month-user-tab">
                            <div class="card">
                                <div class="card-body">
                                    <p class="card-text">Number of user signups (Last Month)</p>
                                    <%= column_chart User.group_by_day(:created_at, last: 30, format: "%-d %b").count, xtitle: "Date", ytitle: "Signups" %>
                                </div>
                            </div>
                        </div>

                        <!-- Tab Content for Last Week -->
                        <div class="tab-pane fade" id="last-week-user" role="tabpanel" aria-labelledby="last-week-user-tab">
                            <div class="card">
                                <div class="card-body">
                                    <p class="card-text">Number of user signups (Last Week)</p>
                                    <%= column_chart User.group_by_day(:created_at, last: 7, format: "%A").count, xtitle: "Day of the Week", ytitle: "Signups" %>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>


            <div class="row mt-3">

                <!-- Courses -->
                <section class="col-md-6 mt-3">
                    <div class="card">
                        <div class="card-body">
                            <h2 class="dashboard__card-title">Courses</h2>
                            <%= link_to 'New Course', new_course_path, class: 'btn btn-sm btn-outline-primary mb-3' %>

                            <% @courses.each do |course| %>
                                <div class="card mt-3">
                                    <div class="">
                                        <%= link_to course.title, course_path(course), class: "" %>
                                        <%= link_to edit_course_path(course) do %>
                                            <i class="bi bi-gear"></i>
                                        <% end %>
                                        <%= link_to course, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } do %>
                                            <i class="bi bi-trash"></i>
                                        <% end %>
                                    </div>
                                    <ul class="list-group list-group-flush">
                                        <% course.lessons.each do |lesson| %>
                                            <li class="list-group-item">
                                                <%= link_to lesson.title, course_lesson_path(course, lesson) %>
                                                <%= link_to edit_course_lesson_path(course, lesson) do %>
                                                    <i class="bi bi-gear"></i> <!-- Edit icon -->
                                                <% end %>
                                                <%= link_to course_lesson_path(course, lesson), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } do %>
                                                    <i class="bi bi-trash"></i> <!-- Delete icon -->
                                                <% end %>
                                            </li>
                                        <% end %>
                                        <li class="list-group-item">
                                            <%= link_to 'Add Lesson', new_course_lesson_path(course), class: 'btn btn-sm btn-outline-primary' %>
                                        </li>
                                    </ul>
                                </div>
                            <% end %>
                        </div>
                    </div>
                </section>

            </div>

