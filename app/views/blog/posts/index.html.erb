<!-- Header -->
<div class="header posts-index__header">
    <h1 class="posts-index__header-title">Become a better writer</h1>
    <p class="posts-index__header-subtitle">First-rate content to help you learn and grow as a writer</p>
    <hr>
</div>

<!-- Pillar Guides -->
<section class="row d-flex">

    <% @essential_guides.each do |post| %>
        <div class="col-12 col-lg-4 d-flex align-items-stretch">
            <div class="card mb-1 h-100">
                    <div class="card-body">

                        <!-- title -->
                        <div class="post-card__title posts-index__essential-guide-title">
                            <h3 class="blog-post-title"><%= link_to post.post_title.titleize, blog_post_path(post), class: "remove-link-decoration" %></h3>
                        </div>

                        <!-- image -->
                        <figure class="post-card__image">
                            <%= image_tag(post.post_image, :alt => post.post_title, class: "img-fluid card-img-top", size: "640x480", loading: "lazy", ) %>
                        </figure>

                        <!-- read more -->
                        <div class="post-card__read-more">
                            <p class="post-card-continue-reading">
                                <div class="d-grid gap-2">
                                <%= link_to "Continue Reading >>>", blog_post_path(post), class: "btn btn-outline-primary btn-sm mt-2" %>
                                </div>
                            </p>
                        </div>


                    </div>
                </div>
        </div>

    <% end %>

</section>

<!-- Body -->
<section class="row mt-3">

    <h2 class="mt-3 mb-4">Latest Posts</h2>

    <!-- Left column for Posts -->
    <div class="col-lg-8">
        <% @posts.each do |post| %>
            <!-- Individual Blog Post -->
            <%= render "shared/post_card", post: post %>
        <% end %>
    </div>

    <!-- Right column for Sidebar -->
    <div class="col-lg-4">
        <!-- Blog Sidebar Content -->
        <%= render "shared/posts_sidebar" %>
    </div>

</section>


  






