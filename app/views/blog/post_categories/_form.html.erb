<div class="form">
  <div class="box">
    <%= form_for([:blog, @post_category]) do |form| %>
      <% if @post_category.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@post_category.errors.count, "error") %> prohibited this post_category from being saved:</h2>

          <ul>
            <% @post_category.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="input">
        <%= form.text_field :name, class: "form-control", placeholder: "Add category name", required: true %>
      </div>

      <!-- Parent Category Selection -->
      <div class="input">
        <%= form.label :parent_category_id, "Parent Category" %>
        <%= form.select :parent_category_id, category_options(@post_category), { include_blank: "No Parent" }, { class: "form-control" } %>
      </div>

      <div class="button">
        <% if @post_category.new_record? %>
          <div class="d-grid gap-2"> 
            <%= form.submit "Submit category", class: "btn btn-primary mb-2" %>
          </div>
        <% else %>
          <div class="d-grid gap-2"> 
            <%= form.submit "Update category", class: "btn btn-primary mb-2" %>
          </div>
        <% end %>
      </div>
      
    <% end %>
  </div>
</div>
