<section class="page-header">
    <!-- Category title -->
    <h1><%= @post_category.name.titleize %></h1>
</section>

<section class="page-body">
  <div class="row">

    <div class="col-lg-8  ">
      <!-- Left column -->
      <% @post_category.posts.published.each do |post| %>
        <!-- blog post layout -->
        <%= render "shared/blog_post_layout", post: post %>
      <% end %>
    </div>

    <!-- Right column -->
    <div class="col-lg-4 ">
      <!-- blog sidebar -->
      <%= render "shared/blog_sidebar" %>
    </div>

  </div>
</section>
