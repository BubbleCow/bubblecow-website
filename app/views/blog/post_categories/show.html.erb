<div class="row justify-content-center">
  <div class="col-sm-10 col-md-8">

    <div class="row mt-5">

      <!-- Left column -->
      <div class="col-lg-8">
        <!-- Category title -->
        <h1><%= @post_category.name.titleize %></h1>

        <% @post_category.posts.published.each do |post| %>
          <!-- blog post layout -->
          <%= render "shared/blog_post_layout", post: post %>
        <% end %>
      </div>

      <!-- Right column -->
      <div class="col-lg-4">
        <!-- blog sidebar -->
        <%= render "shared/blog_sidebar" %>
      </div>

    </div>

  </div>
</div>

