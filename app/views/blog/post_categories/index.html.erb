<section class="page-header">
  <h1>Post Categories</h1>
</section>

<section class="page-body">

<div class="box">

  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Slug</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @post_categories.each do |post_category| %>
        <tr>
          <td><%= post_category.name %></td>
          <td><%= post_category.slug %></td>
          <td><%= link_to 'Show', blog_post_category_path(post_category), class: "btn btn-outline-success btn-sm" %></td>
          <td><%= link_to 'Edit', edit_blog_post_category_path(post_category), class: "btn btn-outline-success btn-sm" %></td>
          <td><%= button_to 'Delete', blog_post_category_path(post_category), method: :delete, form: { data: { turbo_confirm: "Are you sure you want to kill this bad boy?" }}, class: 'btn btn-sm btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>

<br>

<%= link_to 'New Category', new_blog_post_category_path %>

</section>





