<h1>Post Categories</h1>

<div class="box">

  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Slug</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @post_categories.each do |post_category| %>
        <tr>
          <td><%= post_category.name %></td>
          <td><%= post_category.slug %></td>
          <td><%= link_to 'Show', blog_post_category_path(post_category) %></td>
          <td><%= link_to 'Edit', edit_blog_post_category_path(post_category) %></td>
          <td><%= link_to 'Destroy', blog_post_category_path(post_category), method: :delete, data: { confirm: 'Are you sure?' } %></td>

        </tr>
      <% end %>
    </tbody>
  </table>

</div>

<br>

<%= link_to 'New Category', new_blog_post_category_path %>




