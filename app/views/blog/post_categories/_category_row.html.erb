<tr>
  <td style="padding-left: <%= 20 * level %>px;"><%= category.name %></td>
  <td><%= category.parent_category&.name || 'No Parent' %></td>
  <td><%= link_to 'Show', blog_post_category_path(category), class: "btn btn-outline-success btn-sm" %></td>
  <td><%= link_to 'Edit', edit_blog_post_category_path(category), class: "btn btn-outline-success btn-sm" %></td>
  <td><%= button_to 'Delete', blog_post_category_path(category), method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete this category?" }}, class: 'btn btn-sm btn-danger' %></td>
</tr>
