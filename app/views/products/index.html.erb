

      <div class="header">
        <h1 class="products-index__header-title">Products</h1>
      </div>

      <!-- Body Section -->
        <section class="products-page__body">

          <div class="row">

            <div class="col">

              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>Title</th>
                    <th>USD Price</th>
                    <th>GBP Price</th>
                    <th>EUR Price</th>
                    <th>AUD Price</th>
                    <th>NZD Price</th>
                    <th>CAD Price</th>
                    <th colspan="3">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @products.each do |product| %>
                    <tr>
                      <td><%= product.name %></td>
                      <td>$<%= product.price_usd %></td>
                      <td>£<%= product.price_gbp %></td>
                      <td>€<%= product.price_eur %></td>
                      <td>A$<%= product.price_aud %></td>
                      <td>NZ$<%= product.price_nzd %></td>
                      <td>C$<%= product.price_cad %></td>
                      <td><%= link_to 'Show', product, class: "btn btn-secondary btn-sm" %></td>
                      <td><%= link_to 'Edit', edit_product_path(product), class: "btn btn-primary btn-sm" %></td>
                      <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>

              <p><%= link_to 'New Product', new_product_path, class: "btn btn-outline-primary" %></p>

            </div>

          </div>

        </section>



