<main class="page" id="genres">

  <div class="row">
    <div class="col-sm-6">
      <h1>Genres</h1>
    </div>

    <div class="col-sm-6 text-right">
    <%= link_to new_services_genre_path, class: 'btn btn-primary' do %>
      Add New Genre
    <% end %>
    </div>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
      

              <th>Type</th>
              <th>Slug</th>
              
            <th></th>
          
        </tr>
      </thead>

      <tbody>
        <% @genres.each do |genre| %>
          <%= content_tag :tr, id: dom_id(genre), class: dom_class(genre) do %>
            

                        <td><%= genre.genre_type %></td>
                        <td><%= genre.slug %></td>
            
            
              <td><%= link_to 'Show', services_genre_path(genre) %></td>
            
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>

</main>
