<h1>Genres</h1>

<div class="box">

  <div class="table table-hover">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Type</th>
          <th>Slug</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @genres.each do |genre| %>
          <%= content_tag :tr, id: dom_id(genre), class: dom_class(genre) do %>
            <td><%= genre.genre_type %></td>
            <td><%= genre.slug %></td>
            <td>
              <%= link_to 'Show', services_genre_path(genre) %> | 
              <%= link_to 'Edit', edit_services_genre_path(genre) %> | 
              <%= link_to 'Delete', services_genre_path(genre), method: :delete, data: { confirm: "Are you sure you want to kill this bad boy?"} %>
            </td>
            
          <% end %>
        <% end %>
      </tbody>
    </table>

<%= link_to "Add new genre", new_services_genre_path %>

</div>


