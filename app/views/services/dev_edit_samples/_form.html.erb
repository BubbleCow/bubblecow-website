<%= form_with(model: [:services, @book, dev_edit_sample], local: true) do |form| %>
  
  <% if dev_edit_sample.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(dev_edit_sample.errors.count, "error") %> prohibited this dev_edit_sample from being saved:</h2>

      <ul>
      <% dev_edit_sample.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Sample developmental edit submission Form -->
  <p class="lead">To proceed with free sample developmental editing please attach your manuscript.</p>
