  <%= form.file_field :unedited_manuscript, class: "form-control", required: true %>

  <div class="d-grid gap-2 mt-4">
    <%= form.button "Submit for free sample editing", type: "submit", class: 'btn btn-primary', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Submitting..."}  %>
  </div>

<% end %>
