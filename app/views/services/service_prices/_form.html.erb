<%= form_for([:services, @service_price]) do |form| %>

    <div class="form-group">
        <p>Service Type:</p>
        <%= form.select :service_type, [['Developmental Editing']], :required => true, class: "form-control" %>
    </div>

    <div class="form-group">
        <p>Currency:</p>
        <%= form.select :currency, currency_options, :required => true, class: "form-control" %>
    </div>

    <div class="form-group">
        <p>Price:</p>
        <%= form.number_field :price, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= form.submit class: 'btn btn-primary' %>
    </div>

<% end %>