
<% if editorial_staff(current_user) %>
    <!-- Devevlopmental Edit Information -->
    <ul>

        <li>Submitted: <%= @developmental_edit.created_at.strftime("%B %d, %Y") %></li>

        <% if @developmental_edit.rejected_date.present? %>

            <li>Rejected: <%= @developmental_edit.rejected_date.strftime("%B %d, %Y") %></li>

        <% end %>

        <% if @developmental_edit.accepted_date.present? %>

            <li>Accepted: <%= @developmental_edit.accepted_date.strftime("%B %d, %Y") %></li>

        <% end %>

        <% if @developmental_edit.invoice_paid_date.present? %>

            <li>Invoice Paid: <%= @developmental_edit.invoice_paid_date.strftime("%B %d, %Y") %></li>

        <% end %>

        <% if @developmental_edit.due_date.present? %>

            <li>Due Date: <%= @developmental_edit.due_date.strftime("%B %d, %Y") %></li>

        <% end %>

        <% if @developmental_edit.return_date.present? %>

            <li>Return Date: <%= @developmental_edit.return_date.strftime("%B %d, %Y") %></li>

        <% end %>

    </ul>

<% end %>

