


<div class="row">
  <div class="col-sm-6">
    <h1>Testimonials</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_testimonial_path, class: 'btn btn-primary' do %>
    Add New Testimonial
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            <th>Writer</th>
            <th>Approved</th>
            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @testimonials.each do |testimonial| %>
        <%= content_tag :tr, id: dom_id(testimonial), class: dom_class(testimonial) do %>
          

                      <td><%= testimonial.writer %></td>
                      <td><%= testimonial.approved %></td>
          
          
            <td><%= link_to 'Show', testimonial %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
