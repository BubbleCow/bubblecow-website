<div class="row justify-content-center">
  <div class="col-12 col-lg-6">
    <div class="customer_pages">

        <div class="customer_pages__header">
            <h1 class="customer_pages__header__title">Testimonials</h1>
        </div>
    
        <section class="customer_pages__content">
          <% if current_user.try(:admin?) %>
            <p><%= link_to "Add testimonial", new_testimonial_path %></p>
          <% end %>

            <% @testimonials.each do |testimonial| %>
                <div class="card mb-3">
                  <div class="card-body">
                    <p class="card-text"><%= testimonial.testimonial_text %></p>
                    <h6 class="card-subtitle"><%= testimonial.writer.titleize %></h6>
                    <% if current_user.try(:admin?) %>
                      [<%= link_to "edit", edit_testimonial_path(testimonial), class: "card-link" %> | 
                      <%= link_to "delete", testimonial_path(testimonial), data: { "turbo-method": :delete, confirm: "Are you sure you want to kill this bad boy?"} %>]
                    <% end %>
                  </div>
                </div>
            <% end %>
        </section>
   

</div>
</div>
</div>
