<%= form_with(model: testimonial, local: true) do |form| %>
  <% if testimonial.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(testimonial.errors.count, "error") %> prohibited this testimonial from being saved:</h2>

      <ul>
      <% testimonial.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.text_field :writer, placeholder: "Add writer name", class: 'form-control' %>
  </div>

  <div class="form-group">
    <!- Testimonial Text ->
    <%= form.rich_text_area :testimonial_text %>
  </div>

  <div class="form-group">
    <% if testimonial.persisted? %>
      <div class="float-right">
        <%= link_to 'Destroy', testimonial, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if testimonial.persisted? %>
      <%= link_to "Cancel", testimonial, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", testimonials_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
