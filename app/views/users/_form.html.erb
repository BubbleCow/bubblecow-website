<%= form_with(model: user, local: true) do |form| %>

    <div class="form-group">
        <%= form.text_field :first_name, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= form.text_field :last_name, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= form.email_field :email, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= form.select :currency, currency_options, :required => true, class: "form-control" %>
    </div>

     <div class="form-group">
        <p>Current role: <%= user.role %></p>
        <%= form.select(:role, 
            options_for_select([
                ['Free User', 'free_user'], 
                ['Paid User', 'paid_user'], 
                ['Editor', 'editor'], 
                ['Manager', 'manager'], 
                ['Admin', 'admin']
            ]), 
            { prompt: "Select Role" }, 
            { class: "form-select", required: true }) %>

    </div>


    <div class="form-group">
        <%= form.select :country, country_options, :required => true, class: "form-control" %>
    </div>

  <%= form.submit class: 'btn btn-primary' %>

<% end %>
